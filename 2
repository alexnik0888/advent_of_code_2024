fun getSafeReports1(reportsStr: String): Int {
        val inputArray = reportsStr.split("\n")

        var result = 0

        inputArray.forEach {
            val listRow = it.split(" ").map { it.toInt() }

            var isIncrease = false
            listRow.forEachIndexed { index, i ->
                if (index == listRow.lastIndex) {
                    result++
                    return@forEachIndexed
                }
                val nextItem = listRow[index + 1]
                if (index == 0)
                    isIncrease = i < nextItem
                else
                    if (isIncrease != i < nextItem) return@forEach

                val diffRange = 1..3
                if(Math.abs(i-nextItem) !in diffRange)
                    return@forEach
            }
        }

        return result
    }
